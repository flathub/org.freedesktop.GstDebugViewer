{
    "app-id" : "org.freedesktop.GstDebugViewer",
    "branch" : "stable",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "45",
    "sdk" : "org.gnome.Sdk",
    "command" : "gst-debug-viewer",
    "rename-icon" : "gst-debug-viewer",
    "copy-icon" : true,
    "finish-args" : [
        "--socket=x11",
        "--share=ipc",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf",
        "--talk-name=org.freedesktop.Notifications",
        "--filesystem=host",
        "--device=dri"
    ],
    "modules" : [
        {
            "name" : "gst-debug-viewer",
            "buildsystem" : "meson",
            "subdir": "subprojects/gst-devtools",
            "config-opts": [
                "-Dvalidate=disabled",
                "-Dintrospection=disabled",
                "-Dtests=disabled",
                "-Ddebug_viewer=enabled"
            ],
            "sources" : [
                {
                    "type" : "git",
  		            "disable-submodules": true,
                    "tag" : "1.22.5",
     		        "commit": "bf6ce1d64a0697e7910826147b48f8f658366a5a",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git"
                }
            ]
        }
    ]
}
