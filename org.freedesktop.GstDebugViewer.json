{
    "app-id": "org.freedesktop.GstDebugViewer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "49",
    "sdk": "org.gnome.Sdk",
    "command": "gst-debug-viewer",
    "rename-icon": "gst-debug-viewer",
    "copy-icon": true,
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home:ro"
    ],
    "modules": [
        {
            "name": "gst-debug-viewer",
            "buildsystem": "meson",
            "subdir": "subprojects/gst-devtools",
            "config-opts": [
                "-Dvalidate=disabled",
                "-Dintrospection=disabled",
                "-Dtests=disabled",
                "-Ddebug_viewer=enabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "disable-submodules": true,
                    "tag": "1.26.5",
                    "commit": "82cbccedf7946a32d28a5aaec8ebbcb627770c19",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git"
                }
            ]
        }
    ]
}
