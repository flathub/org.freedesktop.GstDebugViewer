{
    "app-id": "org.freedesktop.GstDebugViewer",
    "runtime": "org.gnome.Platform",
    "runtime-version": "45",
    "sdk": "org.gnome.Sdk",
    "command": "gst-debug-viewer",
    "rename-icon": "gst-debug-viewer",
    "copy-icon": true,
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--filesystem=home:ro"
    ],
    "modules": [
        {
            "name": "gst-debug-viewer",
            "buildsystem": "meson",
            "subdir": "subprojects/gst-devtools",
            "config-opts": [
                "-Dvalidate=disabled",
                "-Dintrospection=disabled",
                "-Dtests=disabled",
                "-Ddebug_viewer=enabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "disable-submodules": true,
                    "tag": "1.22.9",
                    "commit": "3e41b8f18b7d19b0ca98a3437c2e27aa0cfe12bb",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gstreamer.git",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 1263,
                        "stable-only": true,
                        "tag-template": "$version"
                    }
                },
                {
                    "type": "patch",
                    "path": "gettext-py310-mr5027.patch"
                },
                {
                    "type": "patch",
                    "path": "chooser_native.patch"
                },
                {
                    "type": "patch",
                    "path": "find_bar_none.patch"
                }
            ]
        }
    ]
}
